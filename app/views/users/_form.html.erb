<div id="signup">
<h2>Create new User</h2>
<%= form_for @user do |f| %>
<h2><%= f.label :username, "Username:" %>
<%= f.text_field :username, :autofocus => true %>
</h2>

<h2><%= f.label :avatar, "Avatar:" %>
  <%= f.file_field :avatar %>
  <%= f.hidden_field :image_cache %>
</h2>


<h2><%= f.label :location, "Location:" %>
  <%= f.text_field :location %>
</h2>

<h2><%= f.label :password, "Password:" %>
  <%= f.password_field :password %>
</h2>

<h2><%= f.label :password_confirmation, "Confirm Password:" %>
  <%= f.password_field :password_confirmation %>
</h2>

<%= f.submit %>
<% end %>

</div><!--/////// close signup //////-->