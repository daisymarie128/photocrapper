<%== usernav %>


<div class="pagewrap">

<div class="folowershow">
<% @followers.each do |followers| %>
  <div class="useravatar">
    <% if following.avatar? %>
  <li><%= link_to(image_tag(followers.user.avatar_url(:thumb)),work_path(followers)) %></li>
    <% end %>
</div><!--///////// close user avatar ////// -->
<div class="followersname">
  <li><%= link_to(followers.user.username, work_path(followers)) %>
  </div><!--/////// close followersname ////////-->
<% end %>

</div><!--/////// close followershow //////-->

<div class="userdata">
  <ul>
  <li><h3><%= @current_user.username %></h3></li>
  <li><%= image_tag(@current_user.avatar) %></li>
  <li><%= @current_user.location %></li>

  <li><%= link_to('FOLLOWERS', '/followers') %></li>
  <li><%= link_to('FOLLOWING', '/following')  %></li>
</ul>

</div><!--//////close userdata ////// -->

</div><!--//////close pagewrap ////// -->